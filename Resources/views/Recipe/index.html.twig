{% extends '::base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}
{% block body -%}
    <h1>Liste des recettes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Date de dépôt</th>
                <th>Nom recette</th>
                <th>Type de plat</th>
                <th>Auteur</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.createdAt|date('d/m/Y') }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.type }}</td>
                <td>{{ recipe.author }}</td>
                <td>
                    <span class="label label-{{ recipe.state }}">
                        {{ recipe.state }}
                    </span>
                </td>
                <td>
                    <a href="{{ path('recipe_show', { 'id': recipe.id }) }}" class="btn btn-default">Voir</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}" class="btn btn-success">
        Nouvelle recette
    </a>
    {% endblock %}
