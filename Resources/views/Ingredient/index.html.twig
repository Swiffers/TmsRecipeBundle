{% extends "TmsRecipeBundle::layout.html.twig" %}

{% block body -%}
    <h1>Ingredient list</h1>

    <table class="table table-bordered table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ingredient_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default btn-sm" href="{{ path('ingredient_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default btn-sm" href="{{ path('ingredient_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ingredient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}